html,body
  margin 0
  padding 0
  width 100%
  height 100%
  background #fff


h1
  position relative
  top 50%
  bottom 50%
  left 0
  right 0
  padding 10px
  margin 0 auto
  display block
  width 100px
  font-size 12px
  font-weight normal
  text-align center
  border 1px solid #333
  a
    color #333 !important


.modalcontent
  position fixed
  display none
  z-index 2
  width 50%
  margin 0
  padding 40px
  border 1px solid #aaa
  background rgba(255, 255, 255, 0.5);


.momo
  display block

.modal-contents
  position fixed
  display none
  z-index 2
  width 50%
  margin 0
  padding 40px
  border 1px solid #aaa
  background rgba(255, 255, 255, 0.5);
  p
    margin 0
    padding 0
    font-size 12px

.modalcontent22
  position fixed
  z-index 4
  width 50%
  margin 0 auto
  position: relative;
